<!DOCTYPE html>
<html lang="zh-CN" ng-app="myapp">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cnode后台管理登录</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
     <script type="text/javascript" src="/js/jquery.min.js"></script>
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <style>
  	.login-warpp{
  		width:50%;
  		margin:10% auto 0;
  	}
  	h1{
  		margin-bottom:50px;
  	}
  </style>
<body>
	<div class="container">
		<form class="form-horizontal login-warpp">
		<h1 class="text-center">Cnode 后台管理登录</h1>
		  <div class="form-group  has-error has-feedback">
		    <label for="user" class="col-sm-2 control-label">用户名</label>
		    <div class="col-sm-8">
		      <input type="type" class="form-control" id="user" placeholder="user">
		      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
		    </div>
		    <div class="col-sm-2">
		    	<span id="tips" class="tips">(success)</span>
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="password" class="col-sm-2 control-label">密码</label>
		    <div class="col-sm-8">
		      <input type="password" class="form-control" id="password" placeholder="Password">
		    </div>
		    <div class="col-sm-2">
		    	 <span id="tips" class="tips">(success)</span>
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <div class="checkbox">
		        <label>
		          <input type="checkbox"> 记住密码
		        </label>
		      </div>
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-default">登录</button>
		    </div>
		  </div>
		</form>
		
	</div>
<script>
	$('.login-warpp').find('button.btn-default').click(function(){
		var data = {
			uname: $('#user').val(),
			pwd: $('#password').val(),
		}
		$.ajax({
			type:'POST',
			url:"/admin/dologin",
			data:data,
			dataType: "text",
			success:function(succ){
				console.log(succ)
				if(succ==='ok'){
					window.location.href="/admin"
				}
			},
			error:function(err){

			}
		})
		return false;
	})
</script>

  </body>
</html>